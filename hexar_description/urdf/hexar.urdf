<?xml version="1.0"?>
<robot name="hexar" xmlns:xacro="https://www.ros.org/wiki/xacro">

    <!-- Colors -->
    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>
    <material name="blue">
        <color rgba="0.0 0.0 0.8 1.0"/>
    </material>
    <material name="green">
        <color rgba="0.0 0.8 0.0 1.0"/>
    </material>
    <material name="grey">
        <color rgba="0.2 0.2 0.2 1.0"/>
    </material>
    <material name="orange">
        <color rgba="${255/255} ${108/255} ${10/255} 1.0"/>
    </material>
    <material name="brown">
        <color rgba="${222/255} ${207/255} ${195/255} 1.0"/>
    </material>
    <material name="red">
        <color rgba="0.8 0.0 0.0 1.0"/>
    </material>
    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
    </material>

    <link name="chassis">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.009" radius="0.1"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.009" radius="0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="chassis-caster_wheel" type="fixed">
        <origin rpy="0 0 0" xyz="0.0802 0 -0.0143"/>
        <parent link="chassis"/>
        <child link="caster_wheel"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.0127"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin rpy=" 0 0 0" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.0127"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.0165"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.000001064514" ixy="0" ixz="0" iyy="0.000001064514" iyz="0" izz="0.000001064514"/>
        </inertial>
        <contact>
            <lateral_friction value="0.0"/>
            <rolling_friction value="0.0"/>
            <stiffness value="30000"/>
            <damping value="1000"/>
        </contact>
    </link>
    
    <joint name="chassis-left_bracket" type="fixed">
        <origin rpy="0 0 0" xyz="-0.0375 0.061 -0.0005"/>
        <parent link="chassis"/>
        <child link="left_bracket"/>
    </joint>

    <link name="left_bracket">
        <visual>
            <geometry>
                <box size="0.025 0.052 0.002"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.025 0.052 0.002"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.0085"/>
            <inertia ixx="0.000001918167" ixy="0" ixz="0" iyy="0.00000044554167" iyz="0" izz="0.00000235804167"/>
        </inertial>
        <contact>
            <lateral_friction value="0.0"/>
            <rolling_friction value="0.0"/>
            <stiffness value="30000"/>
            <damping value="1000"/>
        </contact>
    </link>

    <joint name="left_bracket-left_motor" type="fixed">
        <origin rpy="1.5707963267948966 0 0" xyz="0 -0.0075 0.0135"/>
        <parent link="left_bracket"/>
        <child link="left_motor"/>
    </joint>

    <link name="left_motor">
        <visual>
            <geometry>
                <cylinder length="0.067" radius="0.0125"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.067" radius="0.0125"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.101"/>
            <inertia ixx="0.000041727729167" ixy="0" ixz="0" iyy="0.000041727729167" iyz="0" izz="0.0007890625"/>
        </inertial>
    </link>

    <joint name="chassis-right_bracket" type="fixed">
        <origin rpy="0 0 0" xyz="-0.0375 0.061 -0.0005"/>
        <parent link="chassis"/>
        <child link="right_bracket"/>
    </joint>

    <link name="right_bracket">
        <visual>
            <geometry>
                <box size="0.025 -0.052 0.002"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.025 0.052 0.002"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.0085"/>
            <inertia ixx="0.000001918167" ixy="0" ixz="0" iyy="0.00000044554167" iyz="0" izz="0.00000235804167"/>
        </inertial>
        <contact>
            <lateral_friction value="0.0"/>
            <rolling_friction value="0.0"/>
            <stiffness value="30000"/>
            <damping value="1000"/>
        </contact>
    </link>


</robot>

